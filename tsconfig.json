{
  "compilerOptions": {
    "rootDir": "./src",
    "module": "commonjs",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true, //for ts-rest works
    "target": "es6", // or anything newer like esnext
    "inlineSourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "composite": true,
    "pretty": true,
    "paths": {
      "@/*": ["src/*"],
    },
    "incremental": true
  }
}
